<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="loadshedding.MainPage"
             xmlns:controls="clr-namespace:Microsoft.Maui.Controls;assembly=Microsoft.Maui.Controls.Compatibility"
             xmlns:control="clr-namespace:Syncfusion.Maui.ProgressBar;assembly=Syncfusion.Maui.ProgressBar"
             Title="MainPage">

    <Grid>

        <Grid>
            <Grid.RowDefinitions >
                <RowDefinition Height="100"/>

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
            
                <ColumnDefinition Width="0.80*" />
                <ColumnDefinition Width="0.20*" />
            </Grid.ColumnDefinitions>

            <StackLayout Grid.Row="0" Grid.Column="0" Orientation="Horizontal" BackgroundColor="AliceBlue" HorizontalOptions="FillAndExpand">
                
                <!-- Add your content here -->
                <Label
                    Text="28C"
                    FontSize="20"
                    VerticalOptions="Start"
                    HorizontalOptions="Start"/>
                <Label 
                Text="Theresapark"
                FontSize="35"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                />
                <Label
                    Text="28 July 2023"
                    FontSize="15"
                    VerticalOptions="Start"
                    HorizontalOptions="Start"/>
                
            </StackLayout>

            <StackLayout Grid.Row="0" Grid.Column="1" Orientation="Horizontal" BackgroundColor="AntiqueWhite" HorizontalOptions="FillAndExpand">
                <!-- Second StackLayout with 0.25 width -->
                <!-- Add your content here -->
                <Label 
                Text="Loc Icon"
                FontSize="Large"
                HorizontalOptions="CenterAndExpand"
                />
               
            </StackLayout>

        </Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="350"/>
                <RowDefinition Height="*"/>

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="*" />

            </Grid.ColumnDefinitions>

            <StackLayout Grid.Row="1" Orientation="Horizontal" BackgroundColor="Aqua" HorizontalOptions="FillAndExpand">
                <Label 
                Text="Progress Bar"
                FontSize="Large"
                HorizontalOptions="CenterAndExpand" 
                />
                <control:SfLinearProgressBar Margin="50" Progress="25">
                    
                </control:SfLinearProgressBar>

            </StackLayout>
            <StackLayout Grid.Row="2" Orientation="Horizontal" BackgroundColor="Gray" HorizontalOptions="FillAndExpand" >
                <Label 
                Text="Circular Progress Bar"
                FontSize="Large"
                HorizontalOptions="CenterAndExpand" 
                />

            </StackLayout>

            <StackLayout Grid.Row="3" Orientation="Horizontal" BackgroundColor="AliceBlue"  HorizontalOptions="FillAndExpand">
                <Label 
                Text="News WebView"
                FontSize="Large"
                HorizontalOptions="CenterAndExpand"
                />
                

            </StackLayout>



        </Grid>


    </Grid>

</ContentPage>