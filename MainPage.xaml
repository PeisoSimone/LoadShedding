<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="loadshedding.MainPage"
             
             xmlns:control="clr-namespace:Syncfusion.Maui.ProgressBar;assembly=Syncfusion.Maui.ProgressBar"
             Title="MainPage">

    <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto"
          RowSpacing="20">
        <StackLayout Grid.Row="0"
                     Margin="20,10,20,0"
                     Orientation="Horizontal">
            <Frame Padding="10"
                   CornerRadius="5"
                   HasShadow="True"
                   BorderColor="LightGrey">
                <Label Text="Your Location"
                       FontSize="Default"
                    />
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer
                        x:Name="TapLocation" Tapped="TapLocation_Tapped"/>
                </Frame.GestureRecognizers>

            </Frame>
            <ImageButton Source="location.png"
                         HeightRequest="30"
                         WidthRequest="30"
                         HorizontalOptions="EndAndExpand"
                         Clicked="ImageButton_Clicked"/>
        </StackLayout>

        <StackLayout Grid.Row="1"
                     Orientation="Vertical">
            <Label x:Name="LblCity"
                   FontSize="40"
                   HorizontalOptions="Center"
                   TextColor="Gray"
                   />

        </StackLayout>

        <Grid Grid.Row="2"
              ColumnDefinitions="0.33*,0.33*,0.33*"
              RowDefinitions="Auto, Auto">

            <Label x:Name="LblTemperature"
                   Grid.Row="0"
                   Grid.Column="0"
                   FontSize="Small"
                   HorizontalOptions="Center"
                   TextColor="SlateGray"/>

            <Label x:Name="LblDate"
                   Grid.Row="0"
                   Grid.Column="1"
                   FontSize="Medium"
                   HorizontalOptions="Center"
                   TextColor="SlateGray"/>

            <Label x:Name="LblWeatherDescription"
                   Grid.Row="0"
                   Grid.Column="2"
                   FontSize="Small"
                   HorizontalOptions="Center"
                   TextColor="SlateGray"/>
        </Grid>
        <StackLayout Grid.Row="3"
                     Orientation="Vertical">

            <Frame Padding="10"
                   HeightRequest="50"
                   CornerRadius="5"
                   HasShadow="True"
                   BorderColor="LightGrey"
                   Margin="5,0,5,0">

                <Grid ColumnDefinitions="0.5*,0.5*"
                      RowDefinitions="Auto,Auto">
                    <Label Grid.Row="0"
                       Grid.Column="0"
                       FontSize="Medium"
                       HorizontalOptions="End"
                       TextColor="SlateGray"
                       Text="Stage: "/>

                        <Label x:Name="LblSchedulesCurrentStage"
                       Grid.Row="0"
                       Grid.Column="1"
                       FontSize="Medium"
                       HorizontalOptions="Start"
                       TextColor="SlateGray"/>
                    
                </Grid>
                

            </Frame>
            <Frame Padding="5"
                   HeightRequest="100"
                   CornerRadius="5"
                   HasShadow="True"
                   BorderColor="LightGrey">

                <Grid ColumnDefinitions="0.5*,0.5*"
                      RowDefinitions="Auto,Auto">
                    <Label x:Name="LblSchedulesEvetStart"
                       Grid.Row="0"
                       Grid.Column="0"
                       FontSize="Medium"
                       HorizontalOptions="End"
                       TextColor="SlateGray"/>


                    <Label x:Name="LblSchedulesEvetStop"
                       Grid.Row="0"
                       Grid.Column="1"
                       FontSize="Medium"
                       HorizontalOptions="Start"
                       TextColor="SlateGray"/>

                </Grid>
                
                

                <!--<StackLayout>
                    <control:SfLinearProgressBar 
                        Margin="50"  
                        Progress="50" 
                        HorizontalOptions="FillAndExpand">

                    </control:SfLinearProgressBar>
                </StackLayout>-->
                    
            </Frame>


            <!--<Frame Padding="10"
                   HeightRequest="100"
                   CornerRadius="5"
                   HasShadow="True"
                   BorderColor="LightGrey"
                   Margin="5,0,5,0">

                <Grid ColumnDefinitions="0.5*,0.5*"
                      RowDefinitions="Auto,Auto">
                    <Label Grid.Row="0"
                       Grid.Column="0"
                       FontSize="Medium"
                       HorizontalOptions="End"
                       TextColor="SlateGray"
                       Text="Stage: "/>

                    <Label x:Name="LblOutagesCurrentStage"
                       Grid.Row="0"
                       Grid.Column="1"
                       FontSize="Medium"
                       HorizontalOptions="Start"
                       TextColor="SlateGray"/>

                </Grid>

            </Frame>-->
        </StackLayout>

        <StackLayout Grid.Row="4"
                     Orientation="Vertical">

            <Frame Padding="10"
                   HeightRequest="300"
                   CornerRadius="5"
                   HasShadow="True"
                   BorderColor="LightGrey"
                   Margin="5,0,5,0">
                <control:SfCircularProgressBar Margin="30"  Progress="50" HorizontalOptions="Fill" VerticalOptions="Fill">

                </control:SfCircularProgressBar>
            </Frame>
        </StackLayout>

        <Grid Grid.Row="5"
              RowDefinitions="Auto, Auto"
              ColumnDefinitions="0.33*,0.33*,0.33*">

            <Frame Grid.Row="0" Grid.Column="0"
                Padding="10"
                   HeightRequest="100"
                   CornerRadius="5"
                   HasShadow="True"
                   BorderColor="LightGrey"
                   Margin="5,0,5,0">
            </Frame>

            <Frame Grid.Row="0" Grid.Column="1"
                Padding="10"
                   HeightRequest="100"
                   CornerRadius="5"
                   HasShadow="True"
                   BorderColor="LightGrey"
                   Margin="5,0,5,0">
            </Frame>
            <Frame Grid.Row="0" Grid.Column="2"
                Padding="10"
                   HeightRequest="100"
                   CornerRadius="5"
                   HasShadow="True"
                   BorderColor="LightGrey"
                   Margin="5,0,5,0">
            </Frame>
        </Grid>
    </Grid>
</ContentPage>